<div class="layout--main" id="about-project"> 
    <div class="about flex flex--column">
        <h2 class="about__title"><%= t('pages_nav.about') %></h2>
        <article class="about__wrapper">
            <%= @page_content.about_project.html_safe %>
        </article>
        <div class="about__images flex flex--row flex-align--start">
            <%= render 'home/gallery' if @page_content.gallery_images.any? %>
        </div>
    </div>
</div>

<script>
    lightbox.option({
      'resizeDuration': 200,
      'wrapAround': true,
      'disableScrolling': true,
      'fitImagesInViewport': true,
      'alwaysShowNavOnTouchDevices': true,
    })
</script>
